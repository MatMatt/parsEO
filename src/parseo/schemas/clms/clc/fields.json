{
    "$schema":  "https://json-schema.org/draft/2020-12/schema",
    "title":  "CLC Fields",
    "$defs":  {
                  "project":  {
                                  "type":  "string",
                                  "values":  [
                                                 {
                                                     "code":  "CLC",
                                                     "label":  "Corine Land Cover"
                                                 },
                                                 {
                                                     "code":  "U",
                                                     "label":  "Urban Atlas / Change product"
                                                 }
                                             ],
                                  "description":  "Project code"
                              },
                  "reference_year":  {
                                         "type":  "string",
                                         "pattern":  "^\\d{4}$",
                                         "description":  "Reference year (e.g., 2018, 2012)"
                                     },
                  "product":  {
                                  "type":  "string",
                                  "pattern":  "^[A-Z0-9]+$",
                                  "description":  "Product name, often CLCYYYY or change token"
                              },
                  "version":  {
                                  "type":  "string",
                                  "pattern":  "^V\\d{4}$",
                                  "description":  "Product version (e.g., V2020)"
                              },
                  "resolution":  {
                                     "type":  "string",
                                     "pattern":  "^[0-9]+[A-Za-z0-9]*$",
                                     "description":  "Resolution code (e.g., 20, 100, 20u1)"
                                 },
                  "extension":  {
                                    "type":  "string",
                                    "pattern":  "^[A-Za-z0-9]+$",
                                    "description":  "File extension (no dot), e.g. tif, zip, gdb"
                                }
              }
}
