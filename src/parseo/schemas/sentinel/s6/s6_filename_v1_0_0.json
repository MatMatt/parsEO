                                    "platform":  {

                                                 },
                                    "instrument":  {

                                                   },
                                    "sampling_rate":  {

                                                      },
                                    "mode":  {

                                             },
                                    "start_datetime":  {

                                                       },
                                    "stop_datetime":  {

                                                      },
                                    "segment":  {

                                                },
                                    "extension":  {

                                                  }
                                },
                     "valid_example":  "S6A_P4_20HzN_20221015T103529_20221015T112143_0001.nc"
                 }
}
