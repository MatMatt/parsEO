{
  "schema_id": "copernicus:sentinel:s1",
  "schema_version": "1.0.0",
  "stac_version": "1.1.0",
  "stac_extensions": ["processing", "sat", "sar"],
  "description": "Sentinel-1 product filename; TTTR token is RAW_, SLC_, OCN_, or GRD(F|H|M|E); extension optional.",
  "fields": {
    "platform": {
      "type": "string",
      "enum": ["S1A", "S1B", "S1C"],
      "description": "Spacecraft unit"
    },
    "mode": {
      "type": "string",
      "enum": ["SM", "IW", "EW", "WV"],
      "description": "Acquisition mode"
    },
    "product": {
      "type": "string",
      "enum": ["RAW_", "SLC_", "OCN_", "GRDF", "GRDH", "GRDM", "GRDE"],
      "description": "Product class/type"
    },
    "level": {
      "type": "string",
      "pattern": "^\\d[A-Z]{2}$",
      "description": "Processing level (e.g., 1SD)"
    },
    "pol": {
      "type": "string",
      "enum": ["VV", "HH", "VH", "HV"],
      "description": "Polarisation"
    },
    "start_datetime": {
      "type": "string",
      "pattern": "^\\d{8}T\\d{6}$",
      "description": "Acquisition start datetime (UTC, YYYYMMDDTHHMMSS)"
    },
    "end_datetime": {
      "type": "string",
      "pattern": "^\\d{8}T\\d{6}$",
      "description": "Acquisition end datetime (UTC, YYYYMMDDTHHMMSS)"
    },
    "abs_orbit": {
      "type": "string",
      "pattern": "^A\\d{6}$",
      "description": "Absolute orbit number"
    },
    "datatake": {
      "type": "string",
      "pattern": "^D[0-9A-F]{6}$",
      "description": "Datatake ID"
    },
    "product_id": {
      "type": "string",
      "pattern": "^[0-9A-F]{4,12}$",
      "description": "Unique product ID"
    },
    "extension": {
      "type": "string",
      "enum": ["SAFE"],
      "description": "File extension without leading dot"
    }
  },
  "template": "{platform}_{mode}_{product}_{level}{pol}_{start_datetime}_{end_datetime}_{abs_orbit}_{datatake}_{product_id}[.{extension}]",
  "examples": [
    "S1A_IW_SLC__1SDVV_20250105T053021_20250105T053048_A054321_D068F2E_ABC123.SAFE",
    "S1B_EW_GRDH_1SHHH_20190101T000000_20190101T000030_A012345_D0ABCDE_ABCDEF",
    "S1C_SM_OCN__1SVHV_20240701T101010_20240701T101111_A123456_D1A2B3C_1A2B3C.SAFE",
    "S1A_EW_RAW__0SDVV_20230601T123456_20230601T123546_A210987_D0ABCDEF_123ABC.SAFE",
    "S1B_SM_GRDE_1SHVV_20190315T120000_20190315T120030_A654321_D0FEDCB_DEF123"
  ]
}
