{
  "schema_id": "copernicus:sentinel:s1",
  "schema_version": "1.0.0",
  "stac_version": "1.1.0",
  "stac_extensions": ["processing", "sat", "sar"],
  "description": "Sentinel-1 SAFE product filename; TTTR token is SLC_, OCN_, or GRD(F|H|M); extension optional.",
  "fields": {
    "platform": {
      "type": "string",
      "enum": ["S1A", "S1B", "S1C"],
      "description": "Spacecraft unit"
    },
    "mode": {
      "type": "string",
      "enum": ["SM", "IW", "EW", "WV"],
      "description": "Acquisition mode"
    },
    "product": {
      "type": "string",
      "enum": ["SLC_", "OCN_", "GRDF", "GRDH", "GRDM"],
      "description": "Product class/type"
    },
    "level": {
      "type": "string",
      "pattern": "^\\d[A-Z]{2}$",
      "description": "Processing level (e.g., 1SD)"
    },
    "pol": {
      "type": "string",
      "enum": ["VV", "HH", "VH", "HV"],
      "description": "Polarisation"
    },
    "start_datetime": {
      "type": "string",
      "pattern": "^\\d{8}T\\d{6}$",
      "description": "Acquisition start datetime (UTC, YYYYMMDDTHHMMSS)"
    },
    "end_datetime": {
      "type": "string",
      "pattern": "^\\d{8}T\\d{6}$",
      "description": "Acquisition end datetime (UTC, YYYYMMDDTHHMMSS)"
    },
    "abs_orbit": {
      "type": "string",
      "pattern": "^A\\d{6}$",
      "description": "Absolute orbit number"
    },
    "datatake": {
      "type": "string",
      "pattern": "^D[0-9A-F]{6}$",
      "description": "Datatake ID"
    },
    "product_id": {
      "type": "string",
      "pattern": "^[0-9A-F]{4,12}$",
      "description": "Unique product ID"
    },
    "extension": {
      "type": "string",
      "enum": ["SAFE"],
      "description": "File extension without leading dot"
    }
  },
  "filename_pattern": "^(?P<platform>{{platform}})_(?P<mode>{{mode}})_(?P<product>{{product}})_(?P<level>{{level}})(?P<pol>{{pol}})_(?P<start_datetime>{{start_datetime}})_(?P<end_datetime>{{end_datetime}})_(?P<abs_orbit>{{abs_orbit}})_(?P<datatake>{{datatake}})_(?P<product_id>{{product_id}})(?:\\.(?P<extension>{{extension}}))?$",
  "examples": [
    "S1A_IW_SLC__1SDVV_20250105T053021_20250105T053048_A054321_D068F2E_ABC123.SAFE",
    "S1B_EW_GRDH_1SHHH_20190101T000000_20190101T000030_A012345_D0ABCDE_ABCDEF",
    "S1C_SM_OCN__1SVHV_20240701T101010_20240701T101111_A123456_D1A2B3C_1A2B3C.SAFE"
  ]
}
