{
    "$schema":  "https://json-schema.org/draft/2020-12/schema",
    "title":  "Sentinel-5P Fields",
    "$defs":  {
                  "satellite":  {
                                    "type":  "string",
                                    "values":  [
                                                   {
                                                       "code":  "S5P",
                                                       "label":  "Sentinel-5 Precursor mission"
                                                   }
                                               ],
                                    "description":  "Mission family"
                                },
                  "platform":  {
                                   "type":  "string",
                                   "values":  [
                                                  {
                                                      "code":  "P",
                                                      "label":  "Precursor platform"
                                                  }
                                              ],
                                   "description":  "Fixed platform code"
                               },
                  "instrument":  {
                                     "type":  "string",
                                     "values":  [
                                                    {
                                                        "code":  "TROPOMI",
                                                        "label":  "TROPOMI instrument"
                                                    }
                                                ],
                                     "description":  "Instrument identifier"
                                 },
                  "processing_level":  {
                                           "type":  "string",
                                           "values":  [
                                                          {
                                                              "code":  "L1B",
                                                              "label":  "Level-1B"
                                                          },
                                                          {
                                                              "code":  "L2",
                                                              "label":  "Level-2"
                                                          }
                                                      ],
                                           "description":  "Processing level"
                                       },
                  "sensing_datetime":  {
                                           "type":  "string",
                                           "pattern":  "^\\d{8}T\\d{6}$",
                                           "description":  "Acquisition datetime (UTC, YYYYMMDDTHHMMSS)"
                                       },
                  "product_type":  {
                                       "type":  "string",
                                       "pattern":  "^[A-Z0-9_]{2,12}$",
                                       "description":  "Generic product type token (refine per product later)"
                                   },
                  "extension":  {
                                    "type":  "string",
                                    "pattern":  "^[A-Za-z0-9]+$",
                                    "description":  "File extension without leading dot"
                                }
              }
}
