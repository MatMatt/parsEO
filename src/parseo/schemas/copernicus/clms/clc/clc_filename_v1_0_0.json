{
  "schema_id": "copernicus:clms:clc",
  "schema_version": "1.0.0",
  "stac_version": "1.1.0",
  "stac_extensions": ["raster", "eo"],
  "description": "Corine Land Cover product filename.",
  "fields": {
    "prefix": {
      "type": "string",
      "enum": ["CLC"],
      "description": "Constant prefix"
    },
    "reference_year": {
      "type": "string",
      "enum": ["1990", "2000", "2006", "2012", "2018", "2024"],
      "description": "Reference year (e.g., 2018, 2012)"
    },
    "product": {
      "type": "string",
      "pattern": "^[A-Z0-9]+$",
      "description": "Product name, often CLCYYYY or change token"
    },
    "version": {
      "type": "string",
      "pattern": "^V\\d{4}$",
      "description": "Product version (e.g., V2020)"
    },
    "resolution": {
      "type": "string",
      "pattern": "^[0-9]+[A-Za-z0-9]*$",
      "description": "Resolution code (e.g., 20, 100, 20u1)"
    },
    "extension": {
      "type": "string",
      "pattern": "^[A-Za-z0-9]+$",
      "description": "File extension without leading dot"
    }
  },
  "template": "{prefix}{reference_year}_{product}_{version}_{resolution}[.{extension}]",
  "examples": [
    "CLC2018_CLC2018_V2020_20u1.tif"
  ]
}
