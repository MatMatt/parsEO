{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "schema_id": "copernicus:clms:clc",
  "schema_version": "1.0.0",
  "status": "deprecated",
  "stac_version": "1.1.0",
  "stac_extensions": [
    "https://stac-extensions.github.io/raster/v1.0.0/schema.json",
    "https://stac-extensions.github.io/eo/v1.0.0/schema.json"
  ],
  "description": "Corine Land Cover product filename (extension optional).",
  "fields": {
    "project": {
      "type": "string",
      "enum": [
        "CLC",
        "U"
      ],
      "description": "Project code"
    },
    "reference_year": {
      "type": "string",
      "pattern": "^\\d{4}$",
      "description": "Reference year (e.g., 2018, 2012)"
    },
    "product": {
      "type": "string",
      "pattern": "^[A-Z0-9]+$",
      "description": "Product name, often CLCYYYY or change token"
    },
    "version": {
      "type": "string",
      "pattern": "^V\\d{4}$",
      "description": "Product version (e.g., V2020)"
    },
    "release_number": {
      "type": "string",
      "pattern": "^\\d{2}(?:[A-Za-z]\\d+)?$",
      "description": "Release identifier (e.g., 20, 20b2, 20u1)."
    },
    "extension": {
      "type": "string",
      "enum": [
        "tif"
      ],
      "description": "File extension without leading dot"
    }
  },
  "template": "{project}{reference_year}_{product}_{version}_{release_number}[.{extension}]",
  "examples": [
    "CLC2018_CLC2018_V2020_20u1.tif"
  ]
}
