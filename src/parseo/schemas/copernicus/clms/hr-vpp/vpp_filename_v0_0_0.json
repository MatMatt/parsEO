{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "schema_id": "copernicus:clms:hr-vpp:vpp",
  "schema_version": "0.0.0",
  "status": "current",
  "stac_version": "1.1.0",
  "stac_extensions": [
    "https://stac-extensions.github.io/raster/v1.0.0/schema.json",
    "https://stac-extensions.github.io/eo/v1.0.0/schema.json"
  ],
  "description": "Copernicus Land Monitoring Service HR-VPP Seasonal Trajectories filename schema for Sentinel-2 MGRS and EEA LAEA reference grid products.",
  "fields": {
    "product": {
      "type": "string",
      "enum": [
        "VPP"
      ],
      "description": "Product family prefix (Vegetation Phenology and Productivity)"
    },
    "reference_year": {
      "type": "string",
      "pattern": "^\\d{4}$",
      "description": "Reference year of the seasonal trajectory"
    },
    "sensor": {
      "type": "string",
      "enum": [
        "S2"
      ],
      "description": "Sensor platform",
      "stac_map": {
        "S2": {
          "platform": "Sentinel-2",
          "constellation": "Sentinel-2",
          "instruments": [
            "MSI"
          ]
        }
      }
    },
    "tile": {
      "description": "Sentinel-2 MGRS tile or EEA LAEA reference grid cell identifier (2- or 3-digit coordinates)",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^T\\d{2}[C-HJ-NP-X][A-Z]{2}$",
          "description": "Sentinel-2 MGRS tile identifier"
        },
        {
          "type": "string",
          "pattern": "^[EW]\\d{2,3}[NS]\\d{2,3}$",
          "description": "EEA LAEA reference grid cell identifier (2- or 3-digit coordinates)"
        }
      ]
    },
    "epsg_code": {
      "type": "string",
      "pattern": "^\\d{5}$",
      "description": "EPSG code of the product grid (zero-padded)"
    },
    "resolution": {
      "type": "string",
      "pattern": "^\\d{3}m$",
      "description": "Spatial resolution of the raster product"
    },
    "version": {
      "type": "string",
      "pattern": "^V\\d{3}$",
      "description": "Processing baseline or product version"
    },
    "season": {
      "type": "string",
      "enum": [
        "s1",
        "s2"
      ],
      "description": "Season identifier (s1 = first season, s2 = second season)"
    },
    "variable": {
      "type": "string",
      "enum": [
        "AMPL",
        "EOSD",
        "EOSV",
        "LENGTH",
        "LSLOPE",
        "MAXD",
        "MAXV",
        "MINV",
        "QFLAG",
        "RSLOPE",
        "SOSD",
        "SOSV",
        "SPROD",
        "TPROD"
      ],
      "description": "Phenology or productivity parameter code"
    },
    "extension": {
      "type": "string",
      "enum": [
        "tif"
      ],
      "description": "File extension without leading dot"
    }
  },
  "template": "{product}_{reference_year}_{sensor}_{tile}[-{epsg_code}]-{resolution}_{version}_{season}_{variable}[.{extension}]",
  "examples": [
    "VPP_2017_S2_T32TPR-010m_V101_s1_AMPL.tif",
    "VPP_2017_S2_E45N28-03035-010m_V101_s1_EOSD.tif",
    "VPP_2017_S2_T32TPR-010m_V101_s2_EOSD.tif"
  ]
}
