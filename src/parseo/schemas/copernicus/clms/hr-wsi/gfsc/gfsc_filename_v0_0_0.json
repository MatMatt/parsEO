{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "schema_id": "copernicus:clms:hr-wsi:gfsc",
  "schema_version": "0.0.0",
  "stac_version": "1.1.0",
  "stac_extensions": ["raster", "eo"],
  "description": "CLMS HR-WSI Gap-filled Fractional Snow Cover product filename.",
  "fields": {
    "prefix": {"type": "string", "enum": ["CLMS_WSI"], "description": "Constant prefix"},
    "product": {"type": "string", "enum": ["GFSC"], "description": "Product code"},
    "pixel_spacing": {"type": "string", "enum": ["060m"], "description": "Pixel spacing"},
    "tile_id": {"type": "string", "pattern": "^T\\d{2}[C-HJ-NP-X][A-Z]{2}$", "description": "UTM tile identifier"},
    "period": {"type": "string", "pattern": "^\\d{8}P7D$", "description": "Aggregation period"},
    "combination": {"type": "string", "enum": ["COMB"], "description": "Combination method"},
    "version": {"type": "string", "pattern": "^V\\d{3}$", "description": "Product version"},
    "file_id": {"type": "string", "enum": ["GF", "GF-QA", "QAFLAGS", "MTD"], "description": "File identifier"},
    "extension": {"type": "string", "enum": ["tif", "xml"], "description": "File extension without leading dot"}
  },
  "template": "{prefix}_{product}_{pixel_spacing}_{tile_id}_{period}_{combination}_{version}_{file_id}[.{extension}]",
  "examples": [
    "CLMS_WSI_GFSC_060m_T32TNS_20211018P7D_COMB_V100_GF-QA.tif"
  ]
}