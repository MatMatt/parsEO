{
  "schema_id": "copernicus:clms:hrlvlcc",
  "schema_version": "0.0.0",
  "stac_version": "1.1.0",
  "stac_extensions": ["raster", "eo"],
  "description": "CLMS HRL Vegetation & Land Cover Characteristics product filename.",
  "fields": {
    "prefix": {"type": "string", "enum": ["CLMS_HRLVLCC"], "description": "Constant prefix"},
    "product": {
      "type": "string",
      "enum": ["IMD", "TCD", "FTY", "GRA", "SWF", "WAW"],
      "description": "HRLVLCC sub-product code"
    },
    "resolution": {"type": "string", "pattern": "^\\d{3}m$", "description": "Spatial resolution"},
    "tile_id": {"type": "string", "pattern": "^T\\d{2}[C-HJ-NP-X][A-Z]{2}$", "description": "UTM tile identifier"},
    "sensing_datetime": {"type": "string", "pattern": "^\\d{8}T\\d{6}$", "description": "Sensing date and time"},
    "version": {"type": "string", "pattern": "^V\\d{3}$", "description": "Product version"},
    "file_id": {
      "type": "string",
      "enum": ["IMD", "TCD", "FTY", "GRA", "SWF", "WAW", "MTD"],
      "description": "File identifier"
    },
    "extension": {"type": "string", "enum": ["tif", "xml"], "description": "File extension without leading dot"}
  },
  "template": "{prefix}_{product}_{resolution}_{tile_id}_{sensing_datetime}_{version}_{file_id}[.{extension}]",
  "examples": [
    "CLMS_HRLVLC_IMD_010m_T32TNS_20210101T000000_V100_IMD.tif"
  ]
}
